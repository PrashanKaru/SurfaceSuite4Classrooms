  <h1 style="margin-left:15px">Dashboard</h1>
  <div class="container-fluid " style="margin-left: 30px;
  float: left;
  height: 100%;
  width:800px;
  overflow-y: scroll;
  margin-bottom: 25px;
  margin-bottom:10px">
    
    <div class="row col-sm-10 offset-sm-1 border">
      <h2 style="padding:0.25em; padding-top:0.5em">Students</h2>
      <div class="table-responsive">
        <% if (data.length != 0) { %>
          <table class="table table-striped">
            <div class="sticky">
                <thead class="blue-grey lighten-2">
                    <tr>
                      <th>Surname</th>
                      <th>First Name</th>
                      <th>Score</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
            </div>
            
              <% data.forEach(function(student){ %>
                <tr>
                  <td class="align-middle text-capitalize">
                    <%= student.first_name %>
                  </td>
                  <td class="align-middle text-capitalize">
                    <%= student.last_name %>
                  </td>
                  <td class="align-middle text-capitalize">
                    <%= student.score %>
                  </td>
                  <td>
                    <a href="/dashboard/show/<%= student.student_id %>"  method="get" class="btn btn-info" role="button" data-toggle="tooltip" title="View more information">Info</a>
                  </td>
                </tr>
                <% }) %>
        <% } else {%>
          <div class="card bg-danger text-white">
            <div class="card-body">No students found</div>
          </div>
        <% }%> 
            </tbody>
          </table>
        </div>
        <div>
          <table class="table table-striped" style="margin-top:0px">
            <div>
                <tbody style="margin-top:0px">
                    <form class="form-inline" action="/dashboard/add" method="post" name="form1">
                      <td>
                        <div class="md-form form-lg">
                          <input style="margin-top:0px" id="inputLGEx"type="text" class="form-control form-control-lg" placeholder="First Name" name="first_name" value="<%= first_name %>">
                        </div>
                      </td>
                      <td>
                        <div class="md-form form-lg">
                          <input style="margin-top:0px" id="inputLGEx"type="text" class="form-control form-control-lg" placeholder="Last Name" name="last_name" value="<%= last_name %>">
                        </div>
                      </td>
                      <td>
                      <div>
                        <button style="height:60px; width:120px; margin-top:12px; margin-right:20px" class="btn btn-success" type="submit" value="Add">Create</button>
                      </div>
                    </td>
                  </form>
                </tbody>
            </div>  
          </table>
        </div>
        
      </div>
    </div>
    <div class="container-fluid">
            
        </section>
